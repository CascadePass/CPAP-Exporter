<UserControl x:Class="CascadePass.CPAPExporter.OpenFilesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CascadePass.CPAPExporter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="OpenFilesControl"
             >
    <StackPanel>
        <Border BorderBrush="{DynamicResource OpenFiles.FlowReductionPanel.Border}" BorderThickness="1" CornerRadius="6" Margin="10" Padding="10" Background="{DynamicResource OpenFiles.FlowReductionPanel.Background}">
            <Expander IsExpanded="{Binding IsFlowReductionDescriptionExpanded}">
                <Expander.Header>
                    <local:ToggleSwitch />
                    <!--<CheckBox IsChecked="{Binding ExportParameters.UserPreferences.GenerateFlowEvents}" Margin="10">
                        <TextBlock
                            Text="{x:Static local:Resources.GenerateCustomEvents}"
                            Foreground="{DynamicResource Text.Foreground}"
                            FontWeight="Bold"
                            />
                    </CheckBox>-->
                </Expander.Header>

                <DockPanel LastChildFill="True">
                    <StackPanel DockPanel.Dock="Top">
                        <TextBlock
                            TextWrapping="Wrap"
                            Margin="8"
                            FontFamily="Calibri"
                            Foreground="{DynamicResource Text.Foreground}"
                            Text="{x:Static local:Resources.Label_FlowReductionExplaination}" />

                        <TextBlock Visibility="Collapsed">                            
                            <Hyperlink>
                                <TextBlock Text="{x:Static local:Resources.FlowReductionCodeUri1}"
                                           Foreground="{DynamicResource Text.Foreground}"
                                           FontWeight="Bold"
                                           Margin="8,0,0,0" /> "
                            </Hyperlink>
                        </TextBlock>

                        <TextBlock Visibility="Collapsed">                            
                            <Hyperlink>
                                <TextBlock Text="{x:Static local:Resources.FlowReductionCodeUri2}"
                                           Foreground="{DynamicResource Text.Foreground}"
                                           FontWeight="Bold"
                                           Margin="8,0,0,0" /> "
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>

                    <Border BorderBrush="{DynamicResource OpenFiles.FlowReductionImage.Border}" Background="{DynamicResource OpenFiles.FlowReductionImage.Border}" CornerRadius="12" Padding="8">
                        <Image Source="/Images/FlowReduction.png" />
                    </Border>
                </DockPanel>
            </Expander>
        </Border>

        <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderBrush="{DynamicResource Default.Border}" BorderThickness="1" CornerRadius="4" Margin="10">
                    <Button BorderBrush="Transparent" Command="{Binding BrowseCommand}" MinHeight="{Binding ButtonMinimumHeight, Mode=OneTime}">
                        <Button.Background>
                            <ImageBrush ImageSource="/Images/BrowseButtonBackground.png" Stretch="Fill" />
                        </Button.Background>
                        <Border BorderBrush="Black" BorderThickness=".5" CornerRadius="6" Background="Black" Opacity=".4" Padding="4">
                            <TextBlock
                                Text="{x:Static local:Resources.Browse}"
                                Foreground="{DynamicResource Text.Foreground}"
                                Margin="8"
                                FontWeight="Bold"
                                VerticalAlignment="Center"
                                />
                        </Border>
                    </Button>
                </Border>

                <ItemsControl Grid.Row="1" ItemsSource="{Binding Folders}" Margin="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{DynamicResource Default.Border}" BorderThickness="1" CornerRadius="4" Width="Auto" Margin="0,5,0,5">
                                <Button
                                    BorderBrush="Transparent"
                                    MinHeight="{Binding ElementName=OpenFilesControl, Path=DataContext.ButtonMinimumHeight, Mode=OneTime}"
                                    Command="{Binding ElementName=OpenFilesControl, Path=DataContext.OpenCommand}"
                                    CommandParameter="{Binding .}">
                                    <Button.Background>
                                        <ImageBrush ImageSource="/Images/BrowseButtonBackground.png" Stretch="Fill" />
                                    </Button.Background>
                                    <TextBlock
                                        Text="{Binding .}"
                                        Foreground="{DynamicResource Text.Foreground}"
                                        VerticalAlignment="Center"
                                        />
                                </Button>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </StackPanel>
</UserControl>
