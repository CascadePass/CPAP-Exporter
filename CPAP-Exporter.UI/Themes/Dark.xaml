<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="Window.Background" Color="Black" />
    <SolidColorBrush x:Key="Text.Foreground" Color="#E0E0E0" />
    <SolidColorBrush x:Key="PageTitle.Foreground" Color="#2B7A78" />
    <SolidColorBrush x:Key="PageDescription.Foreground" Color="#3FA7A7" />

    <SolidColorBrush x:Key="Default.Border" Color="#202528" />

    <SolidColorBrush x:Key="Navigation.Drawer.Background" Color="#111111" />
    <SolidColorBrush x:Key="Navigation.SelectedIndicator.Foreground" Color="Red" />
    <SolidColorBrush x:Key="Navigation.MouseOver.Background" Color="#F9A03F" />
    <SolidColorBrush x:Key="Navigation.MouseOver.Shadow" Color="Yellow" />

    <SolidColorBrush x:Key="OpenFiles.FlowReductionPanel.Checked.Border" Color="DarkGreen" />
    <SolidColorBrush x:Key="OpenFiles.FlowReductionPanel.Unchecked.Border" Color="Red" />
    <LinearGradientBrush x:Key="OpenFiles.FlowReductionPanel.Background" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="Transparent" Offset="0.0" />
        <GradientStop Color="Transparent" Offset="0.6" />
        <GradientStop Color="Transparent" Offset="1.0" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="OpenFiles.FlowReductionImage.Border" Color="#333333" />
    <SolidColorBrush x:Key="OpenFiles.OpenButton.MouseOver.Border" Color="SkyBlue" />
    <SolidColorBrush x:Key="OpenFiles.OpenButton.Pressed.Border" Color="DodgerBlue" />

    <ImageBrush x:Key="SavedFiles.Background" ImageSource="/Images/SavedFiles.Background.Dark.png" Stretch="Fill" />
</ResourceDictionary>