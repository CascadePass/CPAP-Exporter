<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="Window.Background" Color="Black" />
    <SolidColorBrush x:Key="Text.Foreground" Color="#E0E0E0" />
    <SolidColorBrush x:Key="PageDescription.Foreground" Color="#3FA7A7" />

    <LinearGradientBrush x:Key="PageTitle.Foreground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF4EB5AD" Offset="0.0"/>
        <GradientStop Color="#FFAFEFEF" Offset="1.0"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="Default.Border" Color="#202528" />

    <SolidColorBrush x:Key="Navigation.Drawer.Background" Color="#111111" />
    <SolidColorBrush x:Key="Navigation.SelectedIndicator.Foreground" Color="Green" />
    <SolidColorBrush x:Key="Navigation.MouseOver.Background" Color="LightGreen" />
    <SolidColorBrush x:Key="Navigation.MouseOver.Shadow" Color="LawnGreen" />

    <SolidColorBrush x:Key="Legibility.Background" Color="#AA1E1E2F" />

    <Color x:Key="StatusPanel.Shadow.Color">#444444</Color>
    <SolidColorBrush x:Key="StatusPanel.Foreground" Color="Black" />
    <SolidColorBrush x:Key="StatusPanel.Background" Color="#B0FFF1A3" />
    <SolidColorBrush x:Key="StatusPanel.MessageBorderBrush" Color="Gold" />
    <SolidColorBrush x:Key="StatusPanel.AttentionStripeBrush" Color="Gold" />
    <SolidColorBrush x:Key="StatusPanel.InfoMessage.Foreground" Color="Black" />
    <SolidColorBrush x:Key="StatusPanel.InfoMessage.Background" Color="#B0FFF1A3" />
    <SolidColorBrush x:Key="StatusPanel.InfoMessage.MessageBorderBrush" Color="#B0FFF1A3" />
    <SolidColorBrush x:Key="StatusPanel.InfoMessage.AttentionStripeBrush" Color="#B0FFF1A3" />

    <!-- Warning Message Brushes -->
    <SolidColorBrush x:Key="StatusPanel.WarningMessage.Foreground" Color="#FFE082" />
    <SolidColorBrush x:Key="StatusPanel.WarningMessage.Background" Color="#FF3E2723" />
    <SolidColorBrush x:Key="StatusPanel.WarningMessage.MessageBorderBrush" Color="#FFFFB300" />
    <SolidColorBrush x:Key="StatusPanel.WarningMessage.AttentionStripeBorderBrush" Color="#FFFF8F00" />

    <!-- Error Message Brushes -->
    <SolidColorBrush x:Key="StatusPanel.ErrorMessage.Foreground" Color="#FFCDD2" />
    <SolidColorBrush x:Key="StatusPanel.ErrorMessage.Background" Color="#FFB71C1C" />
    <SolidColorBrush x:Key="StatusPanel.ErrorMessage.MessageBorderBrush" Color="#FFD32F2F" />
    <SolidColorBrush x:Key="StatusPanel.ErrorMessage.AttentionStripeBorderBrush" Color="#FFB71C1C" />

    <!-- Busy Message Brushes -->
    <SolidColorBrush x:Key="StatusPanel.BusyMessage.Foreground" Color="#BBDEFB" />
    <SolidColorBrush x:Key="StatusPanel.BusyMessage.Background" Color="#FF0D47A1" />
    <SolidColorBrush x:Key="StatusPanel.BusyMessage.MessageBorderBrush" Color="#FF1976D2" />
    <SolidColorBrush x:Key="StatusPanel.BusyMessage.AttentionStripeBorderBrush" Color="#FF64B5F6" />

    <SolidColorBrush x:Key="OpenFiles.FlowReductionPanel.Checked.Border" Color="DarkGreen" />
    <SolidColorBrush x:Key="OpenFiles.FlowReductionPanel.Unchecked.Border" Color="Red" />
    <LinearGradientBrush x:Key="OpenFiles.FlowReductionPanel.Background" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="Transparent" Offset="0.0" />
        <GradientStop Color="Transparent" Offset="0.6" />
        <GradientStop Color="Transparent" Offset="1.0" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="OpenFiles.FlowReductionImage.Border" Color="#333333" />
    <SolidColorBrush x:Key="OpenFiles.OpenButton.MouseOver.Border" Color="SkyBlue" />
    <SolidColorBrush x:Key="OpenFiles.OpenButton.Pressed.Border" Color="DodgerBlue" />

    <ImageBrush x:Key="SavedFiles.Background" ImageSource="/Images/SavedFiles.Background.Dark.png" Stretch="Fill" />
</ResourceDictionary>