<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <SolidColorBrush x:Key="Window.Background" Color="Black" />
    <SolidColorBrush x:Key="Text.Foreground" Color="LightGray" />
    <SolidColorBrush x:Key="PageTitle.Foreground" Color="LightGray" />
    <SolidColorBrush x:Key="PageDescription.Foreground" Color="Gray" />

    <SolidColorBrush x:Key="Navigation.SelectedIndicator.Foreground" Color="Red" />
    <SolidColorBrush x:Key="Navigation.MouseOver.Background" Color="Orange" />
    <SolidColorBrush x:Key="Navigation.MouseOver.Shadow" Color="Yellow" />

    <SolidColorBrush x:Key="OpenFiles.FlowReductionPanel.Border" Color="Blue" />
    <LinearGradientBrush x:Key="OpenFiles.FlowReductionPanel.Background" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#003366" Offset="0.0" />
        <GradientStop Color="#222222" Offset="1.0" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="OpenFiles.FlowReductionImage.Border" Color="#333333" />
</ResourceDictionary>