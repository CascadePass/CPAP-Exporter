<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="Window.Background" Color="#F5F7FA" />
    <SolidColorBrush x:Key="Text.Foreground" Color="#1F1F1F" />
    <SolidColorBrush x:Key="PageTitle.Foreground" Color="#007C91" />
    <SolidColorBrush x:Key="PageDescription.Foreground" Color="#3FA7A7" />

    <SolidColorBrush x:Key="Default.Border" Color="#D0D3D6" />

    <SolidColorBrush x:Key="Navigation.Drawer.Background" Color="#EEEEEE" />
    <SolidColorBrush x:Key="Navigation.SelectedIndicator.Foreground" Color="Blue" />
    <SolidColorBrush x:Key="Navigation.MouseOver.Background" Color="Aqua" />
    <SolidColorBrush x:Key="Navigation.MouseOver.Shadow" Color="LightBlue" />

    <SolidColorBrush x:Key="Legibility.Background" Color="#99F0" />

    <SolidColorBrush x:Key="OpenFiles.FlowReductionPanel.Border" Color="DarkGreen" />
    <LinearGradientBrush x:Key="OpenFiles.FlowReductionPanel.Background" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="Transparent" Offset="0.0" />
        <GradientStop Color="Transparent" Offset="0.6" />
        <GradientStop Color="Transparent" Offset="1.0" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="OpenFiles.FlowReductionImage.Border" Color="White" />
    <SolidColorBrush x:Key="OpenFiles.OpenButton.MouseOver.Border" Color="SkyBlue" />
    <SolidColorBrush x:Key="OpenFiles.OpenButton.Pressed.Border" Color="DodgerBlue" />

    <ImageBrush x:Key="SavedFiles.Background" ImageSource="/Images/SavedFiles.Background.Light.png" Stretch="Fill" />
</ResourceDictionary>